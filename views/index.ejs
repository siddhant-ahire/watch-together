<!-- backend/views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Watch Together</title>
    <link rel="stylesheet" href="/styles.css">
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div class="container">
        <h1>Watch Together</h1>
        <form id="uploadForm" enctype="multipart/form-data">
            <input type="file" id="videoFile" name="videoFile" accept="video/*" required>
            <button type="submit">Upload Video</button>
        </form>
        <video id="videoPlayer" controls style="display:none;" muted>
            <source id="videoSource" src="" type="video/mp4">
            Your browser does not support the video tag.
        </video>        
        <input type="range" id="seekBar" min="0" max="100" step="1" value="0">
        <div class="controls">
            <div class="range-control-container">
                <label class="range-label" for="volumeControl">Volume:</label>
                <input type="range" id="volumeControl" class="range-slider" min="0" max="1" step="0.1" value="0">
            </div>
            <button id="fullscreenBtn" style="display: none; width: 100px;">Fullscreen</button> <!-- Initially hidden -->
        </div>        
        <br>
        <br>
        <button id="playBtn">Play</button>
        <button id="pauseBtn">Pause</button>
        <button id="syncBtn" style="display: none;">Sync</button>
    </div>
    <div class="video-chat-container" id="video-chat-container">
        <div class="video-grid">
            <video id="my-video" autoplay playsinline></video>
            <div id="video-grid">
            </div>
        </div>
          <!-- Buttons for controlling microphone and camera -->
        <div class="controls">
            <button id="muteButton">Mute</button>
            <button id="cameraButton">Turn Camera Off</button>
        </div>
    </div>
    
    <script>
        const ROOM_ID = "<%= roomId %>";
      </script>
    <script src="/script.js"></script>
</body>
</html>
